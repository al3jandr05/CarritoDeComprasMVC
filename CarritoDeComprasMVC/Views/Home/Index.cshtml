@{
    ViewData["Title"] = "Bienvenido";
}

<div class="container text-center my-5">
    <div class="jumbotron p-5 text-white" style="background-image: url('https://source.unsplash.com/featured/?store'); background-size: cover; background-position: center; border-radius: 10px;">
        <div class="overlay bg-dark opacity-75" style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; border-radius: 10px; opacity: 0.8;"></div>
        <div class="container position-relative" style="z-index: 2;">
            <h1 class="display-4 font-weight-bold">¡Bienvenido a Nuestra Tienda!</h1>
            <p class="lead mt-3">Descubre una gran selección de productos esenciales que tenemos para ti.</p>
        </div>
    </div>

    <div class="card mt-4 shadow-lg border-0">
        <div class="card-body p-5">
            <p class="card-text lead">Haz clic en el botón de abajo para ver nuestro catálogo completo y encuentra lo que necesitas.</p>
            <a asp-action="Index" asp-controller="Producto" class="btn btn-primary btn-lg mt-4 px-5 py-2 shadow-sm rounded-pill">Ver Productos</a>
        </div>
    </div>
</div>
