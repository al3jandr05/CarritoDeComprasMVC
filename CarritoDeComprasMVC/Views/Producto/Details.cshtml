@model CarritoDeComprasMVC.Models.Entity.Producto

<h1 class="text-center mb-4">@Model.Nombre</h1>

<div class="container d-flex justify-content-center">
    <div class="card shadow-lg border-0" style="width: 100%; max-width: 600px;">
        <div class="card-img-wrapper p-3 text-center">
            <img src="@Model.ImagenUrl" class="card-img-top img-fluid" alt="@Model.Nombre" style="max-height: 300px; object-fit: contain;">
        </div>
        <div class="card-body text-center">
            <h5 class="card-title text-secondary">@Model.Nombre</h5>
            <p class="card-text">@Model.Descripcion</p>
            <p class="card-text text-primary" style="font-size: 1.5rem;">Precio: @Model.Precio.ToString("C")</p>

            <form asp-action="AddToCart" asp-controller="Producto" method="post" class="text-center">
                <input type="hidden" name="productId" value="@Model.Id" />
                <div class="form-floating mb-3" style="width: 100px; margin: auto;">
                    <input type="number" name="quantity" value="1" min="1" class="form-control" placeholder="Cantidad" />
                    <label for="quantity">Cantidad</label>
                </div>
                <button type="submit" class="btn btn-primary w-100 mb-2">Agregar al Carrito</button>
            </form>

            <a asp-action="Index" asp-controller="Producto" class="btn btn-secondary w-100">Volver a la lista de productos</a>
        </div>
    </div>
</div>
